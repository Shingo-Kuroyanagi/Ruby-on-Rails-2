
<div class="row">
	<div class="col-xs-3">


		<%= render 'users/profile', book: @book,user: @user  %>
	</div>

	<div class="col-xs-9">

		<table class="table table-hover table-inverse">
		<h2>Book detail</h2>

      </tbody>
				<tr>
					<td>
						<%= link_to user_path(@user) do %>
							<%= attachment_image_tag @user,:profile_image ,format:'jpeg',fallback: "no_image.jpg", size: '50x50'%>
						<div><%= @user.name %></div>
						<% end %>
					</td>
					<td><%= link_to @book_show.title, book_path(@book_show) %></td>
					<td><%= @book_show.body %></td>
					<%if @book_show.user == current_user %>
					<td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
			        <% end %>
				</tr>
				</tbody>
			</table>

	</div>
</div>

