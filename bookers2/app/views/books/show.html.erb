
<div class="row">
	<div class="col-xs-3">
    <%= render 'users/profile', book: @book,user: @user  %>
	</div>

	<div class="col-xs-9">
		<table class="table table-hover table-inverse">
		<h2>Book detail</h2>

      </tbody>
				<tr>
					<td>
						<%= link_to user_path(@user) do %>
							<%= attachment_image_tag @user,:profile_image ,format:'jpeg',fallback: "no_image.jpg", size: '50x50'%>
						  <div><%= @user.name %></div>
						<% end %>
					</td>
					<td><%= link_to @book_show.title, book_path(@book_show) %></td>
					<td><%= @book_show.body %></td>
					<td class = "favorite-btn">
						<% if @book_show.favorited_by?(current_user) %>
							 <%= link_to @book_show.favorites.count, book_favorites_path(@book_show), method: :delete, class: "glyphicon glyphicon-heart" %>
						<% else %>
							 <%= link_to @book_show.favorites.count, book_favorites_path(@book_show), method: :post, class: "glyphicon glyphicon-heart-empty" %>
						<% end %>
					</td>
					<td>コメント数:<%= @book_show.book_comments.count %></td>
			        
			     	  <% if @book_show.user == current_user %>
			          <td><%= link_to 'Edit', edit_book_path(@book_show.id), class: "btn-sm btn-success edit_book_#{@book_show.id}" %></td>
			          <td><%= link_to 'Destroy', book_path(@book_show.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_book_#{@book.id}"%></td>
			        <% end %>
				</tr>
				</tbody>
			</table>
	    
　　    <table>
	         <% @book_show.book_comments.each do |book_comment| %>
	         <tr>
	          <td>
	            <%= link_to user_path(book_comment.user),class:"user_#{book_comment.user_id}" do %>
	            <%= attachment_image_tag book_comment.user,:profile_image ,format:'jpeg',fallback: "no_image.jpg", size: '50x50'%>
	            <div><%= book_comment.user.name%></div>
	            <% end %>
	          </td>
	          <td><%= book_comment.comment %></d>
	          <td>
	          <% if book_comment.user == current_user %>
               <%= link_to "Destoroy",book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
              <% end %>
            </td>
	        <% end %>
	      </tr>
	    </table>
			  <%= form_with(model:[@book_show, @book_comment], local: true) do |f| %>
			  <div class="row">
			    <div class="col-sm-12">
			      <%= f.text_area :comment, size:'90x5'%>
			    </div>
			  </div>
			  <%= f.submit "送信" %>
			  <% end %>
	</div>
</div>

